.loader,
.loader:after,
.loader:before
  border-radius: 50%

.loader:after,
.loader:before
  position: absolute
  content: ""

.loader
  color: #ff0
  font-size: 12px
  text-indent: -9999px
  margin: 50px auto
  position: relative
  width: 12rem
  height: 12rem
  box-shadow: inset 0 0 0 0.5rem
  -webkit-transform: translateZ(0)
  -ms-transform: translateZ(0)
  transform: translateZ(0)
  // background: #c2e59c
  // background: -webkit-linear-gradient(to left, #c2e59c , #64b3f4)
  // background: linear-gradient(to left, #c2e59c , #64b3f4)

.loader:after
  top: -0.5rem
  left: 6.0rem
  width: 6.5rem
  height: 13rem
  background-color: #fff
  border-radius: 0 13rem 13rem 0
  -webkit-transform-origin: 0 6.5rem
  transform-origin: 0 6.5rem
  -webkit-animation: loaders 2s infinite ease
  animation: loaders 2s infinite ease

.loader:before
  top: -0.5rem
  left: -0.5rem
  width: 6.5rem
  height: 13rem
  background-color: #fff
  border-radius: 13rem 0 0 13rem
  -webkit-transform-origin: 6.5rem 6.5rem
  transform-origin: 6.5rem 6.5rem
  -webkit-animation: loaders 2s infinite ease 1.5s
  animation: loaders 2s infinite ease 1.5s

@-webkit-keyframes loaders
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)
  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)

@keyframes loaders
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)
  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)
